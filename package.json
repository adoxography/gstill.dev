{
  "name": "gstill.dev",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "autoprefixer": "^10.0",
    "prop-types": "^15.7.2",
    "react": "^17.0",
    "react-dom": "^17.0",
    "react-scripts": "^4.0",
    "tailwind-scrollbar": "^1.0.1",
    "tailwindcss": "^2.0"
  },
  "scripts": {
    "build:style": "NODE_ENV=production tailwind build src/assets/styles/index.css -o src/assets/styles/tailwind.css",
    "watch:style": "tailwind build src/assets/styles/index.css -o src/assets/styles/tailwind.css",
    "start": "yarn watch:style && react-scripts start",
    "build": "yarn build:style && react-scripts build"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "eslint-config-airbnb": "^18.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "postcss": "^8.1.7",
    "stylelint": "^13.7.2",
    "stylelint-config-standard": "^20.0.0"
  }
}
