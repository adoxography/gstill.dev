{
  "name": "gstill.dev",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "autoprefixer": "^10.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-scripts": "^3.4",
    "tailwindcss": "^1.8.8"
  },
  "scripts": {
    "build:style": "NODE_ENV=production tailwind build src/assets/styles/index.css -o src/assets/styles/tailwind.css",
    "watch:style": "tailwind build src/assets/styles/index.css -o src/assets/styles/tailwind.css",
    "start": "yarn watch:style && react-scripts start",
    "build": "yarn build:style && react-scripts build"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
